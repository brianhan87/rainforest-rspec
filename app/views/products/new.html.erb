<%= form_for @product, url: { action: "create" }, html: { class: "nifty_form" } do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name %><br/>

  <%= f.label :description %><br/>
  <%= f.text_area :description %><br/>

  <%= f.label :price %><br/>
  <%= f.text_field :price %><br/>

  <%= f.submit :create %><br/>



<% end %>
